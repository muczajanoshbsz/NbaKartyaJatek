<Window x:Class="NbaKartyaJatek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NBA Kártyajáték" Height="500" Width="800"
        Background="#FF1E1E1E">
    <Grid>
        <!-- Menü panel -->
        <Grid x:Name="MenuPanel" Visibility="Visible" Background="#FF1E1E1E">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
                <TextBlock Text="🏀 NBA Kártyajáték" 
                           FontSize="30" Foreground="White" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>
                <TextBlock Text="Hány lappal szeretnél játszani? (páros szám, max 40)" 
                           Foreground="White" TextWrapping="Wrap" Margin="0,0,0,10"/>
                <TextBox x:Name="LapSzamTextBox" Width="200" Height="30" Text="20" HorizontalAlignment="Center" />
                <Button Content="Játék indítása" Width="200" Height="40" Margin="0,15,0,10" Click="StartGame_Click"/>
                <Button Content="Kilépés" Width="200" Height="40" Click="Exit_Click"/>
                <TextBlock x:Name="ErrorText" Foreground="Red" Margin="0,10,0,0" TextWrapping="Wrap" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>

        <!-- Játék panel -->
        <Grid x:Name="GamePanel" Visibility="Collapsed" Background="#FF1E1E1E" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10" Grid.Row="0" >
                <TextBlock x:Name="PontszamText" Text="Játékos 0 - 0 Gép" FontSize="20" Foreground="White" />
            </StackPanel>

            <!-- Kártyák -->
            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <ItemsControl x:Name="JatekosKartyaLista" Grid.Column="0" HorizontalAlignment="Left" >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <!-- VS szöveg középen -->
                <TextBlock Grid.Column="1" Text="VS" Foreground="White" FontSize="30" VerticalAlignment="Center" Margin="20"/>

                <!-- Gép kártyája jobb oldalon -->
                <ItemsControl x:Name="GepKartyaLista" Grid.Column="2" HorizontalAlignment="Right">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>

            <!-- Gombok alul -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15" Grid.Row="2" >
                <Button Content="Lapfordítás" Width="150" Margin="10" Click="KovetkezoKor_Click"/>
                <Button Content="Vissza a menübe" Width="150" Margin="10" Click="BackToMenu_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
